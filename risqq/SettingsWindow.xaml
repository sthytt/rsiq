<Window
    x:Class="risqq.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:risqq"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Settings"
    Width="600"
    Height="500"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <!--  Break Duration Slider  -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock
                Margin="0,0,0,5"
                FontSize="13"
                FontWeight="SemiBold"
                Text="Break Duration (minutes)" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <Slider
                    x:Name="BreakDurationSlider"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    IsSnapToTickEnabled="True"
                    Maximum="30"
                    Minimum="1"
                    TickFrequency="1"
                    Value="5" />
                <TextBlock
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Text="{Binding ElementName=BreakDurationSlider, Path=Value, StringFormat='{}{0:0} min'}" />
            </Grid>
        </StackPanel>

        <!--  Time Between Breaks Slider  -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock
                Margin="0,0,0,5"
                FontSize="13"
                FontWeight="SemiBold"
                Text="Time Between Breaks (minutes)" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <Slider
                    x:Name="TimeBetweenBreaksSlider"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    IsSnapToTickEnabled="True"
                    Maximum="120"
                    Minimum="15"
                    TickFrequency="5"
                    Value="60" />
                <TextBlock
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Text="{Binding ElementName=TimeBetweenBreaksSlider, Path=Value, StringFormat='{}{0:0} min'}" />
            </Grid>
        </StackPanel>

        <!--  Postpone Duration Slider  -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock
                Margin="0,0,0,5"
                FontSize="13"
                FontWeight="SemiBold"
                Text="Postpone Duration (minutes)" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <Slider
                    x:Name="PostponeDurationSlider"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    IsSnapToTickEnabled="True"
                    Maximum="5"
                    Minimum="1"
                    TickFrequency="1"
                    Value="3" />
                <TextBlock
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Text="{Binding ElementName=PostponeDurationSlider, Path=Value, StringFormat='{}{0:0} min'}" />
            </Grid>
        </StackPanel>

        <!--  Notifications Toggle  -->
        <StackPanel Grid.Row="4" Margin="0,0,0,12">
            <TextBlock
                Margin="0,0,0,6"
                FontSize="13"
                FontWeight="SemiBold"
                Text="Notifications" />
            <StackPanel Orientation="Horizontal">
                <RadioButton
                    x:Name="NotificationsOnRadio"
                    Margin="0,0,20,0"
                    VerticalAlignment="Center"
                    Content="On"
                    GroupName="Notifications"
                    IsChecked="True" />
                <RadioButton
                    x:Name="NotificationsOffRadio"
                    VerticalAlignment="Center"
                    Content="Off"
                    GroupName="Notifications" />
            </StackPanel>
        </StackPanel>

        <!--  Breaks Toggle  -->
        <StackPanel Grid.Row="5" Margin="0,0,0,12">
            <TextBlock
                Margin="0,0,0,6"
                FontSize="13"
                FontWeight="SemiBold"
                Text="Enable Breaks" />
            <StackPanel Orientation="Horizontal">
                <RadioButton
                    x:Name="BreaksOnRadio"
                    Margin="0,0,20,0"
                    VerticalAlignment="Center"
                    Content="On"
                    GroupName="Breaks"
                    IsChecked="True" />
                <RadioButton
                    x:Name="BreaksOffRadio"
                    VerticalAlignment="Center"
                    Content="Off"
                    GroupName="Breaks" />
            </StackPanel>
        </StackPanel>

        <!--  Notification Sound  -->
        <StackPanel Grid.Row="6" Margin="0,0,0,15">
            <TextBlock
                Margin="0,0,0,6"
                FontSize="13"
                FontWeight="SemiBold"
                Text="Notification Sound" />
            <ComboBox
                x:Name="NotificationSoundComboBox"
                Width="200"
                Padding="8,5"
                HorizontalAlignment="Left"
                SelectedIndex="0">
                <ComboBoxItem Content="Bell" />
                <ComboBoxItem Content="Bird" />
                <ComboBoxItem Content="Digital" />
                <ComboBoxItem Content="Kitchen" />
                <ComboBoxItem Content="Wood" />
            </ComboBox>
        </StackPanel>

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="8"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="SaveButton"
                Width="100"
                Height="35"
                Margin="0,0,10,0"
                Click="SaveButton_Click"
                Content="Save"
                FontSize="14" />
            <Button
                x:Name="CancelButton"
                Width="100"
                Height="35"
                Click="CancelButton_Click"
                Content="Cancel"
                FontSize="14" />
        </StackPanel>
    </Grid>
</Window>